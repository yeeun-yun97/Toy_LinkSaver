<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.github.yeeun_yun97.toy.linksaver.viewmodel.LinkViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/nameEditText"
                style="@style/important3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="이름을 입력해 주세요"
                android:inputType="text"
                android:text="@={viewModel.linkName, default = 링크이름}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alinkTextView" />

            <ImageView
                android:id="@+id/alinkImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_add_link_24" />

            <TextView
                android:id="@+id/alinkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="저장될 링크"
                app:layout_constraintBottom_toBottomOf="@id/alinkImageView"
                app:layout_constraintStart_toEndOf="@id/alinkImageView"
                app:layout_constraintTop_toTopOf="@id/alinkImageView" />

            <TextView
                android:id="@+id/linkUrlTextView"
                style="@style/header5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:paddingStart="10dp"
                android:text="@{viewModel.fullUrl, default = https}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/nameEditText"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/nameEditText"
                app:layout_constraintTop_toBottomOf="@+id/nameEditText"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/domainTextView"
            style="@style/important3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:text="도메인"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        <Spinner
            android:id="@+id/domainSpinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingVertical="5dp"
            app:layout_constraintEnd_toEndOf="@+id/domainTextView"
            app:layout_constraintStart_toStartOf="@+id/domainTextView"
            app:layout_constraintTop_toBottomOf="@+id/domainTextView" />

        <TextView
            android:id="@+id/linkTextView"
            style="@style/important3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="세부링크"
            app:layout_constraintEnd_toEndOf="@+id/domainSpinner"
            app:layout_constraintStart_toStartOf="@+id/domainSpinner"
            app:layout_constraintTop_toBottomOf="@+id/domainSpinner" />

        <EditText
            android:id="@+id/linkEditText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:paddingVertical="5dp"
            android:text="@={viewModel.linkUrl, default = https}"
            app:layout_constraintEnd_toStartOf="@+id/pasteButton"
            app:layout_constraintStart_toStartOf="@+id/linkTextView"
            app:layout_constraintTop_toBottomOf="@+id/linkTextView" />

        <Button
            android:id="@+id/pasteButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="붙여넣기"
            app:layout_constraintBottom_toBottomOf="@+id/linkEditText"
            app:layout_constraintEnd_toEndOf="@+id/linkTextView"
            app:layout_constraintTop_toBottomOf="@+id/linkTextView" />

        <TextView
            android:id="@+id/tagTextView"
            style="@style/important3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="태그"
            app:layout_constraintEnd_toEndOf="@+id/pasteButton"
            app:layout_constraintStart_toStartOf="@+id/linkEditText"
            app:layout_constraintTop_toBottomOf="@+id/linkEditText" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/saveButton"
            app:layout_constraintEnd_toEndOf="@+id/tagTextView"
            app:layout_constraintStart_toStartOf="@+id/tagTextView"
            app:layout_constraintTop_toBottomOf="@+id/tagTextView">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tagChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="저장하기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/addDomainTextView"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:gravity="bottom"
            android:text="추가"
            app:layout_constraintBottom_toBottomOf="@+id/domainTextView"
            app:layout_constraintEnd_toEndOf="@+id/domainTextView"
            app:layout_constraintTop_toTopOf="@+id/domainTextView" />

        <TextView
            android:id="@+id/addTagTextView"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:gravity="bottom"
            android:text="추가"
            app:layout_constraintBottom_toBottomOf="@+id/tagTextView"
            app:layout_constraintEnd_toEndOf="@+id/tagTextView"
            app:layout_constraintTop_toTopOf="@+id/tagTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

