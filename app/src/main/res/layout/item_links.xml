<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/linksItem_domainTextView"
        style="@style/important6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="도메인"
        app:layout_constraintBottom_toBottomOf="@+id/linksItem_nameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linksItem_nameTextView"
        app:layout_constraintTop_toTopOf="@+id/linksItem_nameTextView"
        tools:paddingVertical="5dp" />

    <TextView
        android:id="@+id/linksItem_nameTextView"
        style="@style/important1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:text="이름"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A7A7A7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linksItem_webButton" />

    <ImageView
        android:id="@+id/linksItem_webButton"
        style="@style/imageButton"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/listItem_shareButton"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linksItem_nameTextView"
        app:srcCompat="@drawable/ic_baseline_web_24"
        tools:layout_constraintHorizontal_chainStyle="spread_inside" />

    <ImageView
        android:id="@+id/listItem_shareButton"
        style="@style/imageButton"
        android:layout_width="0dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/linksItem_webButton"
        app:layout_constraintEnd_toStartOf="@id/linksItem_editButton"
        app:layout_constraintStart_toEndOf="@+id/linksItem_webButton"
        app:layout_constraintTop_toTopOf="@+id/linksItem_webButton"
        app:srcCompat="@drawable/ic_baseline_share_24" />

    <ImageView
        android:id="@+id/linksItem_editButton"
        style="@style/imageButton"
        android:layout_width="0dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linksItem_deleteButton"
        app:layout_constraintStart_toEndOf="@+id/listItem_shareButton"
        app:layout_constraintTop_toTopOf="@+id/listItem_shareButton"
        app:srcCompat="@drawable/ic_baseline_edit_24" />

    <ImageView
        android:id="@+id/linksItem_deleteButton"
        style="@style/imageButton"
        android:layout_width="0dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/linksItem_editButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linksItem_editButton"
        app:layout_constraintTop_toTopOf="@+id/linksItem_editButton"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

</androidx.constraintlayout.widget.ConstraintLayout>